/* base */
* {
    font-family: 'Helvetica Neue', Arial, Helvetica, sans-serif;
    box-sizing: border-box;
}
html,
body{
    width: 100%;
    margin: 0;
    padding:0;
    color:black;
    line-height: 20px;
}
body{
    font-size: 15px;
    background-color: #f7f2ea;
    background-image: url( '{{ "background.jpg" | asset_url }} ');
    background-size: 100%;
    background-attachment: fixed;
    background-repeat: no-repeat;
    padding-top: 110px;
}
h1,h2,h3,h4,h5,h6,p,ul,ol{
    margin: 0;
    padding: 0;
    font-weight: 400;
}
a{
    text-decoration: none;
}

ul,
ol{
    list-style-type: none;
}
/* stylesheets */
h1,.h1
h2,.h2{
    font-family: 'Georgia', 'Times New Roman', Times, serif;
    font-weight: 700;
    color:#333333;
}
h1,
.h1{
    font-size:50px;
    line-height: 60px;
}
h2,
.h2{
    font-size: 30px;
    line-height:40px;
}
h4,
.h4{
    font-size: 13px;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.075em;
    color:#333333;
}
a{
    color:#555555;
}
a:hover{
    opacity: 0.75;
}
p{
    color:#555555;
}
p a{
    border-bottom:1px solid rgba(0,0,0,0.15) ;
}
p a:hover{
    border-bottom-color:#000000
}
.text-link{
    font-size: 13px;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.075em;
    color:#000000;
}
.white{
    color: #ffffff;
}


/* utility classes */
.visually-hidden{
position: absolute !important;
height: 1px; width: 1px;
overflow: hidden;
clip: rect(1px 1px 1px 1px); /* IE6, IE7 */
clip: rect(1px 1px 1px 1px 1px);
}
.wrapper{
    padding-right: 40px;
    padding-left: 40px;
}

.grid{
    display: grid;
    grid-column-gap: 20px;
    grid-row-gap: 20px;
}
.grid >*{
    min-width: 0;
    min-height:0;
}
.grid.collapse{
    grid-column-gap: 0;
    grid-row-gap: 0;
}
.two-columns{
    grid-template-columns: 1fr 1fr;
}
.valign-center{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.ta-center{
    text-align: center;
}

/* header */
.header-global{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height: 80px;
    background-color: #EEE6DD;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding:20px 40px;
    z-index: 1;
}
.header-global .shop-link{
    order:-1;
}
.header-global .cart-close-text{
    display: none;
}

/* footer */
.footer-global{
    background-color: #F4EDE6;
    margin-top:40px; ;
    border-top: 1px solid rgba(0,0,0,0.15);
}
.footer-global h4{
    margin-bottom:20px;
}
.footer-top,
.footer-bottom{
    padding:40px;
}
.footer-top{
    grid-template-columns: 2fr 1fr 1fr;
}
.footer-bottom{
    border-top:1px solid rgba(0,0,0,0.15);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding:20px 40px;
}
.social-links a{
    display: inline-block;
    
}
.social-links a:not(:last-child){
    margin-right: 10px;
}
/* Index styles */
.index-top{
    height:50vh;
    min-height:400px;
    padding-bottom: 40px;

}
/* shared product styles */
.product-info-section{
    padding: 40px;
    background-color: #333333;
    display: flex;
    flex-direction: column;
    text-align: center;

}
.product-info-section .product-description{
    margin-bottom:20px;
}
.product-info-color{
    color:#cccccc;
}
.product-info-color a{
    color:white;
}
.product-info-color p{
    color:#cccccc;
}
.product-title{
    padding:20px 0;
    margin-top: auto;
    margin-bottom: auto;
    color:#ffffff;
}
.price{
    display: inline-block;
    font-size: 15px;
    color:#cccccc;
    font-weight: 400;
    vertical-align: super;
}
.below-title{
    max-width:396px;
    margin: 0 auto;
}
.below-title p{
    margin-bottom: 20px;
}
/* product card */
.product-card .card-image a{
    display: block;    
    width: 100%;
    height: 100%;
}
.product-card .card-image img{
    display: block;
    max-width: 100%;
    height:auto;
}
.product-card:nth-child(odd).card-image{
    grid-column: 0;
    grid-row:1;
    
}
/* product page */
.product-image{
    width:100%;
}
.product-image img{
    display: block;
    max-width: 100%;
    height: auto;
}

/* add to cart form */

.option-row{
    text-align: left;
    padding:20px 0;
    border-top: 1px solid white;
    display: flex;
    flex-direction: column;
    justify-content: center;

}
.option-row:last-of-type{
    border-bottom:1px solid white ;
}
.option-title{
    color: white;
}
.variant-radio{
    position: absolute !important;
    height: 1px; width: 1px;
    overflow: hidden;
    clip: rect(1px 1px 1px 1px); /* IE6, IE7 */
    clip: rect(1px 1px 1px 1px 1px);
}
.variant-radio + label{
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.075em;
    display: inline-block;
    cursor: pointer;
    padding: 4px;
    border: 1px solid transparent;
    color: #cccccc;
}
